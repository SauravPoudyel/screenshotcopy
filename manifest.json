{
  "manifest_version": 3,
  "name": "Screenshot to ChatGPT",
  "description": "Capture the current tab and push the screenshot directly into a ChatGPT tab.",
  "version": "0.1.0",
  "permissions": ["tabs", "scripting", "storage", "commands", "activeTab"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Send screenshot to ChatGPT",
    "default_popup": "popup.html"
  },
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Capture the active tab and upload it to ChatGPT"
    },
    "capture-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "Send selected text to ChatGPT"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}

